<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/entrytexts"
        android:background="#D8D8D8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/lessons_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessons_original_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessons_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessons_nstage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessons_nLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessons_students_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="22sp"
            android:textStyle="bold" />



    </LinearLayout>

</LinearLayout>
