<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    >

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="id: "
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/students_Id"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/students_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="  Lesson: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--original_filename -->
        <TextView
            android:id="@+id/students_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="  filename: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--original_filename -->
        <TextView
            android:id="@+id/students_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="  stage: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--numero stage -->
        <TextView
            android:id="@+id/students_nstage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="  lesson: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--numero lesson -->
        <TextView
            android:id="@+id/students_nlesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="  student_id: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--numero lesson -->
        <TextView
            android:id="@+id/students_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingTop="6dip"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
